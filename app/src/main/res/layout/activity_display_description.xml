<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.maxmal.www.prepfordialysistechnician.DisplayDescriptionActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white">


        <LinearLayout style="@style/popup_bg">


            <TextView
                android:id="@+id/meaning_label"
                style="@style/popup_label" />

            <TextView
                android:id="@+id/meaning_description"
                style="@style/popup_content" />


        </LinearLayout>


    </ScrollView>
</LinearLayout>
